{
  "name": "@bifravst/aws",
  "version": "0.0.0-development",
  "description": "AWS-based implementation of Bifravst",
  "scripts": {
    "test": "test -n \"$SKIP_TESTS\" && true || jest",
    "postinstall": "node scripts/warnIfWrongNodeVersion.js && npx tsc"
  },
  "bin": {
    "bifravst": "cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bifravst/aws.git"
  },
  "bugs": {
    "url": "https://github.com/bifravst/aws/issues"
  },
  "homepage": "https://bifravst.github.io/",
  "keywords": [
    "Cloud",
    "IoT",
    "bifravst",
    "AssetTracker",
    "NordicSemiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "MIT",
  "dependencies": {
    "@bifravst/athena-helpers": "^3.0.0",
    "aws-iot-device-sdk": "^2.2.1",
    "aws-sdk": "^2.504.0",
    "backoff": "^2.5.0",
    "cfn-response": "^1.0.1",
    "chalk": "^2.4.2",
    "commander": "^3.0.0",
    "date-fns": "^1.30.1"
  },
  "devDependencies": {
    "@aws-cdk/aws-athena": "^1.3.0",
    "@aws-cdk/aws-cloudfront": "^1.3.0",
    "@aws-cdk/aws-codebuild": "^1.3.0",
    "@aws-cdk/aws-codepipeline": "^1.3.0",
    "@aws-cdk/aws-cognito": "^1.3.0",
    "@aws-cdk/aws-events-targets": "^1.3.0",
    "@aws-cdk/aws-iam": "^1.3.0",
    "@aws-cdk/aws-iot": "^1.3.0",
    "@aws-cdk/aws-s3": "^1.3.0",
    "@aws-cdk/aws-ssm": "^1.3.0",
    "@aws-cdk/core": "^1.3.0",
    "@bifravst/random-words": "^2.0.1",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-angular": "^8.1.0",
    "@nrfcloud/package-layered-lambdas": "^1.2.0",
    "@types/aws-iot-device-sdk": "^2.2.0",
    "@types/aws-lambda": "^8.10.31",
    "@types/aws-sdk": "^2.7.0",
    "@types/backoff": "^2.5.1",
    "@types/cfn-response": "^1.0.0",
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.0",
    "@types/websocket": "0.0.40",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "cdk": "^1.3.0",
    "change-case": "^3.1.0",
    "compare-versions": "^3.5.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "websocket": "^1.0.29"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext .js,.ts",
      "git add"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "release": {
    "branch": "saga",
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "deploy": {
    "branch": "saga",
    "webApp": {
      "repository": "https://github.com/bifravst/app.git",
      "branch": "saga"
    },
    "deviceUI": {
      "repository": "https://github.com/bifravst/device-ui.git",
      "branch": "saga"
    }
  },
  "jest": {
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+\\.spec\\.ts$",
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
