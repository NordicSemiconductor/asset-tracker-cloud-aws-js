{
  "printWidth": 80,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript",
        "singleQuote": true,
        "trailingComma": "all",
        "useTabs": true,
        "semi": false
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "markdown",
        "proseWrap": "always"
      }
    },
    {
      "files": ".prettierrc,*.json,*.eslintrc",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "*.js",
      "options": {
        "parser": "babel",
        "singleQuote": true,
        "trailingComma": "all",
        "useTabs": true,
        "semi": false
      }
    },
    {
      "files": "*.yml,*yaml",
      "options": {
        "parser": "yaml",
        "proseWrap": "always"
      }
    }
  ]
}
